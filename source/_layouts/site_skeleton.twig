{% import 'macros/blogpost_img.twig' as blogimg %}
{% import 'macros/infocard.twig' as infocard %}
{% import 'macros/page_snippet.twig' as snippet %}
{% block imports %}
{% endblock %}

<!doctype html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1,shrink-to-fit=no">
    {% include "partials/head_sharingmeta.twig" %}
    {% block head_meta %}
    {% endblock %}

    {% block head_title %}
        <title>{% if page.draft %}(draft) {% endif %}{% block title %}{% endblock %} | Twenty of Time</title>
    {% endblock %}

    {% block head_stylesheet %}
        <link rel="stylesheet" href="{{ site.url }}/assets/css/style.css">
        {% block custom_stylesheet %}
        {% endblock %}
    {% endblock %}

    {% block head_javascript %}
        <script src="{{ site.url }}/assets/js/tot.js" type="text/javascript"></script>
        {% block custom_javascript %}
        {% endblock %}
    {% endblock %}
</head>
<body>
<header class="header">
    {% block header %}
        {% include "partials/header.twig" %}
    {% endblock %}
</header>
<main>
    {% block main %}
    {% endblock %}
</main>
<footer>
    {% block footer %}
        {% include "partials/footer.twig" %}
    {% endblock %}
</footer>
{% block foot_javascript %}
{% endblock %}
</body>
